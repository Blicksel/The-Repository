---
export interface Props {
  productUrl: string;
  productName?: string;
  className?: string;
}

const { 
  productUrl, 
  productName = "Buy on Amazon", 
  className = "" 
} = Astro.props;

// Add affiliate tag to Amazon URLs
const affiliateUrl = productUrl.includes('amazon.com') 
  ? `${productUrl}${productUrl.includes('?') ? '&' : '?'}tag=blickselp-20`
  : productUrl;
---

<a 
  href={affiliateUrl} 
  target="_blank" 
  rel="nofollow noopener sponsored"
  class={`amazon-btn-inline ${className}`}
  aria-label={`Buy ${productName} on Amazon`}
>
  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">

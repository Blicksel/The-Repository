    image: "https://images.pexels.com/photos/324028/pexels-photo-324028.jpeg?auto=compress&cs=tinysrgb&w=800",
    url: "/coming-soon?category=Kitchen&title=Kitchen Gadgets That Actually Work",
    category: "Kitchen",
    date: "2024-01-03",
    readingTime: 5
  }
];

const categories = ["All", "Electronics", "Smart Home", "Kitchen", "Health & Fitness", "Gaming", "Beauty"];
---

<BaseLayout
  title="Blog - Latest Product Reviews & Buying Guides | Blicksel Picks"
  description="Read the latest product reviews, buying guides, and Amazon deal alerts. Stay informed with expert recommendations and honest reviews."
>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Product Reviews & Buying Guides
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Discover honest reviews, detailed comparisons, and expert recommendations 
            to help you make informed purchasing decisions on Amazon.
          </p>
        </div>
        
        <!-- Category Filter -->
        <div class="flex flex-wrap justify-center gap-2 mb-8">
          {categories.map(category => (
            <button 
              class="category-btn px-4 py-2 rounded-full text-sm font-medium transition-colors hover:bg-primary-100 hover:text-primary-700"
              data-category={category.toLowerCase()}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Blog Posts Grid -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="posts-grid">
          {posts.map(post => (
            <BlogCard {...post} />
          ))}
        </div>
        
        <!-- Load More Button -->
        <div class="text-center mt-12">
          <button class="btn-primary text-lg px-8 py-3" id="load-more">
            Load More Posts
          </button>
        </div>
      </div>
    </section>
    
    <!-- AdSense Placeholder -->
    <div class="py-8 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gray-200 border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
          <p class="text-gray-500">Google AdSense Advertisement Placeholder</p>
          <p class="text-sm text-gray-400 mt-2">728x90 Leaderboard</p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .category-btn {
    background-color: #f3f4f6;
    color: #6b7280;
  }
  
  .category-btn.active {
    background-color: #3b82f6;
    color: white;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const categoryBtns = document.querySelectorAll('.category-btn');
    const postsGrid = document.getElementById('posts-grid');
    const loadMoreBtn = document.getElementById('load-more');
    
    // Set initial active state
    categoryBtns[0]?.classList.add('active');
    
    // Category filtering
    categoryBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active state
        categoryBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        const category = btn.dataset.category;
        const posts = postsGrid?.querySelectorAll('article');
        
        posts?.forEach(post => {
          if (category === 'all') {
            post.style.display = 'block';
          } else {
            const postCategory = post.querySelector('.inline-flex')?.textContent?.toLowerCase();
            post.style.display = postCategory?.includes(category) ? 'block' : 'none';
          }
        });
      });
    });
    
    // Load more functionality (placeholder)
    loadMoreBtn?.addEventListener('click', () => {
      alert('Loading more posts... (This would fetch more posts from your CMS in a real implementation)');
    });
  });
</script>
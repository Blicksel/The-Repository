---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  category?: string;
}

const urlParams = new URLSearchParams(Astro.url.search);
const { title = urlParams.get('title') || "Coming Soon", category = urlParams.get('category') } = Astro.props;
---

<BaseLayout
  title={`${title} | Blicksel Picks`}
  description={`${title} content is coming soon. Stay tuned for detailed reviews and recommendations.`}
  noIndex={true}
>
  <Header />
  
  <main class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="bg-white rounded-lg shadow-sm p-12">
        <div class="w-24 h-24 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        
        <h1 class="text-4xl font-bold text-gray-900 mb-6">
          {category ? `${category} Reviews` : title}
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          We're working hard to bring you comprehensive reviews and recommendations for this category. 
          Our team is currently testing products and preparing detailed content.
        </p>
        
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
          <h3 class="text-lg font-semibold text-blue-900 mb-2">What's Coming</h3>
          <ul class="text-blue-800 space-y-2">
            <li>• Detailed product reviews and comparisons</li>
            <li>• Expert buying guides and recommendations</li>
            <li>• Best deals and price tracking</li>
            <li>• User reviews and ratings</li>
          </ul>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/blog" class="btn-primary text-lg px-8 py-3">
            Browse Latest Reviews
          </a>
          <a href="/categories" class="btn-accent text-lg px-8 py-3">
            Explore Categories
          </a>
        </div>
        
        <p class="text-gray-500 mt-8">
          Want to be notified when this content is ready? 
          <a href="/contact" class="text-primary-600 hover:text-primary-700 font-medium">Contact us</a> 
          to join our notification list.
        </p>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>
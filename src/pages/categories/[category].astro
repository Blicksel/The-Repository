---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';
import DynamicIcon from '../../components/DynamicIcon.astro';

export async function getStaticPaths() {
  // Get all blog posts
  const blogPosts = await getCollection('blog');
  
  // Get all categories from CMS
  const categories = await getCollection('categories');
  
  // Create a map of category slugs to category data
  const categoryMap = new Map();
  categories.forEach(cat => {
    categoryMap.set(cat.data.slug, cat.data);
  });
  
  // Get unique categories from blog posts and create paths
  const categorySet = new Set();
  blogPosts.forEach(post => {
    if (post.data.category) {
      // Convert category name to slug format
      const categorySlug = post.data.category.toLowerCase()
        .replace(/\s+/g, '-')
        .replace(/&/g, 'and');
      categorySet.add(categorySlug);
    }
  });
  
  // Create paths for each category
  return Array.from(categorySet).map(categorySlug => {
    // Get posts for this category
    const categoryPosts = blogPosts.filter(post => {
      const postCategorySlug = post.data.category.toLowerCase()
        .replace(/\s+/g, '-')
        .replace(/&/g, 'and');
      return postCategorySlug === categorySlug;
    });
    
    // Get category data from CMS or create default
    const categoryData = categoryMap.get(categorySlug) || {
      title: categorySlug.split('-').map(word => 
        word.charAt(0).toUpperCase() + word.slice(1)
      ).join(' '),
      description: `Discover the best products and reviews in the ${categorySlug.replace('-', ' ')} category.`,
      icon: 'star',
      colorClass: 'bg-blue-100 text-blue-800',
      productCount: categoryPosts.length
    };
    
    return {
      params: { category: categorySlug },
      props: { 
        categoryData,
        posts: categoryPosts,
        categorySlug
      }
    };
  });
}

const { categoryData, posts, categorySlug } = Astro.props;

// Format posts for BlogCard component
const formattedPosts = posts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  image: post.data.image || "https://images.pexels.com/photos/4112236/pexels-photo-4112236.jpeg?auto=compress&cs=tinysrgb&w=800",
  url: `/blog/${post.slug}`,
  category: post.data.category,
  date: post.data.publishDate,
  readingTime: Math.ceil(post.body.split(' ').length / 200) || 5,
  featured: post.data.featured || false
}));

// Sort posts by date (newest first)
formattedPosts.sort((a, b) => new Date(b.date) - new Date(a.date));

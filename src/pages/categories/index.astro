---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import DynamicIcon from '../../components/DynamicIcon.astro';

// Get all blog posts to count posts per category
const blogPosts = await getCollection('blog');

// Get all categories from CMS
const categories = await getCollection('categories');

// Create category stats
const categoryStats = new Map();

// Count posts per category
blogPosts.forEach(post => {
  if (post.data.category) {
    const categorySlug = post.data.category.toLowerCase()
      .replace(/\s+/g, '-')
      .replace(/&/g, 'and');
    
    if (!categoryStats.has(categorySlug)) {
      categoryStats.set(categorySlug, {
        name: post.data.category,
        slug: categorySlug,
        count: 0,
        posts: []
      });
    }
    
    const category = categoryStats.get(categorySlug);
    category.count++;
    category.posts.push(post);
  }
});

// Merge with CMS categories and add missing ones
const allCategories = [];

// Add CMS categories first
categories.forEach(cat => {
  const stats = categoryStats.get(cat.data.slug) || { count: 0, posts: [] };
  allCategories.push({
    ...cat.data,
    postCount: stats.count,
    posts: stats.posts
  });
});

// Add any categories from blog posts that aren't in CMS
categoryStats.forEach((stats, slug) => {
  const existsInCMS = categories.some(cat => cat.data.slug === slug);
  if (!existsInCMS) {
    allCategories.push({
      title: stats.name,
      slug: stats.slug,
      description: `Discover the best products and reviews in the ${stats.name.toLowerCase()} category.`,
      icon: 'star',
      colorClass: 'bg-blue-100 text-blue-800',
      featured: false,
      productCount: stats.count,
      postCount: stats.count,
      posts: stats.posts
    });
  }
});

// Sort categories by post count (descending) then alphabetically
allCategories.sort((a, b) => {
  if (b.postCount !== a.postCount) {
    return b.postCount - a.postCount;
  }
  return a.title.localeCompare(b.title);
});
---

<BaseLayout
  title="Product Categories - Shop by Category | Blicksel Picks"
  description="Browse our product categories to find the best Amazon deals and reviews. From electronics to home goods, discover curated recommendations."
>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Shop by Category
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Discover the best Amazon products organized by category. Each section features 
            our top picks, detailed reviews, and expert recommendations.
          </p>
          <div class="flex justify-center space-x-8 text-sm text-gray-500">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Expert Reviews
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Honest Recommendations
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Best Deals
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Categories Grid -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {allCategories.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {allCategories.map(category => (
              <a 
                href={`/categories/${category.slug}`}
                class="card group hover:scale-105 transform transition-all duration-300"
              >
                <div class="p-8 text-center">
                  <div class="flex justify-center mb-6">
                    <div class={`w-16 h-16 ${category.colorClass.replace('text-', 'bg-').replace('-800', '-100')} rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200`}>
                      <DynamicIcon 
                        name={category.icon} 
                        class="w-8 h-8 text-gray-600 group-hover:text-gray-700 transition-colors duration-200" 
                      />
                    </div>
                  </div>
                  
                  <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary-600 transition-colors duration-200">
                    {category.title}
                  </h2>
                  
                  <p class="text-gray-600 mb-6 leading-relaxed line-clamp-3">
                    {category.description}
                  </p>
                  
                  <div class="space-y-3">
                    <div class="flex justify-center space-x-4">
                      <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${category.colorClass}`}>
                        {category.postCount || 0} {(category.postCount || 0) === 1 ? 'article' : 'articles'}
                      </span>
                      {category.featured && (
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                          Featured
                        </span>
                      )}
                    </div>
                    
                    <div class="text-primary-600 font-medium group-hover:text-primary-700 transition-colors duration-200">
                      Explore {category.title} →
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-8">
              <DynamicIcon name="star" class="w-12 h-12 text-gray-400" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Categories Coming Soon</h2>
            <p class="text-gray-600 max-w-md mx-auto">
              We're organizing our content into categories. Check back soon for organized product reviews and buying guides.
            </p>
          </div>
        )}
      </div>
    </section>
    
    <!-- Featured Categories -->
    {allCategories.filter(cat => cat.featured).length > 0 && (
      <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Popular This Month</h2>
            <p class="text-lg text-gray-600">Most searched and reviewed categories</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {allCategories.filter(cat => cat.featured).slice(0, 3).map(category => (
              <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-8 text-center">
                <div class="flex justify-center mb-4">
                  <DynamicIcon name={category.icon} class="w-10 h-10 text-blue-600" />
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{category.title}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{category.description}</p>
                <a href={`/categories/${category.slug}`} class="text-primary-600 hover:text-primary-700 font-medium">
                  View {category.title} →
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}
    
    <!-- Newsletter CTA -->
    <section class="py-16 bg-gradient-to-r from-primary-600 to-accent-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Stay Updated</h2>
        <p class="text-xl text-primary-100 mb-8">
          Get notified when we add new categories and reviews
        </p>
        <a href="/contact" class="bg-white text-primary-600 font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors">
          Subscribe to Updates
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>